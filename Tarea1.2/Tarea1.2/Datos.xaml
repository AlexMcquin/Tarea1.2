<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tarea1._2.Datos">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Label Text="Datos" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>


            <Label Text="{Binding Nombre}" HorizontalTextAlignment="Center"  TextColor="Black" FontSize="16"/>
            <Label Text="{Binding Apellido}" HorizontalTextAlignment="Center" TextColor="Black" FontSize="16"/>
            <Label Text="{Binding Edad}" HorizontalTextAlignment="Center" TextColor="Black" FontSize="16"/>
            <Label Text="{Binding Correo}" HorizontalTextAlignment="Center" TextColor="Black" FontSize="16"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>